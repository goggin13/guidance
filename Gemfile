source 'https://rubygems.org'

gem 'rails'
gem 'jquery-rails'
gem 'bcrypt-ruby'
gem 'pg'

group :development, :test do
  gem 'rspec-rails'
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

group :test do
  gem 'capybara'
  gem 'factory_girl_rails'
end
