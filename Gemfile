source 'https://rubygems.org'

gem 'rails'
gem 'jquery-rails'
gem 'bcrypt-ruby'
gem 'pg'
gem 'opentok'
gem 'pusher'
gem 'thin'
gem 'paperclip', '~> 3.0'
gem 'aws-sdk', '~> 1.3.4'

group :development, :test do
  gem 'rspec-rails'
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

group :test do
  gem 'capybara'
  gem 'factory_girl_rails'
end
