

.nav {
  height: 30px;
  margin-top: -20px;
  li {
    list-style-type: none;
    float: left;
    clear: none;
    border-radius: 0px 0px 5px 5px;
    padding: 10px;
    background-color: #5E8DA5;
    a, a:hover, a:visited {
      color: white;
      text-decoration: none;
      font-size: 1.3em;
    }
  }
}

#header {
  background-color: #00CEAD;
  color: white;
  font-size: 2em;
  padding: 10px;
}

#chat_window_container {
  background: none repeat scroll 0 0 white;
  border: thin solid black;
  display: none;
  float: right;
  padding: 10px;
  width: 258px;
}

#home_page_banner {
  background-image: url(<%= asset_path 'group_shot.jpg' %>);
  color: white;
  font-size: 2em;
  font-weight: bold;
  height: 203px;
  line-height: 1.5em;
  padding: 30px 0 0 30px;
  width: 870px; 
  margin-bottom: 25px;
}

#top_floater {
  height: 20px;
  background: black;
}

#page_wrapper {
  background-color: lightgray;
  min-height: 600px;
  padding: 0px 10px;
}

.video_chat_me {
  color: blue;
  cursor: pointer;
}

.decline {
  color: red;
  cursor: pointer;
}

.accept {
  color: green;
  cursor: pointer;
}

.video_display {
  margin-right: 25px;
  margin-top: 25px;
}

#stream-subscriber,
#stream-publisher {
  margin: 25px;
}

object {
  margin-bottom: 30px;
  margin-left: 90px;
  margin-right: 25px;
}

#chat_input {
  width: 500px;
  margin-left: 40px;
}

#chat_box {
  border: thin solid black;
  height: 200px;
  margin-left: 155px;
  width: 600px;
}